{{> header }}

<script>
    window.addEventListener('c:cart:changed', () => location.reload());
</script>

<div class="container">
    <h1>Shopping Cart ({{products.length}})</h1>
    <ul class="collection" style="margin-bottom: 60px;">

        {{#each products}}
        <li class="collection-item avatar">
            <img src="{{this.imageUrl}}" alt="" class="circle">
            <span class="title"><b>{{this.name}}</b></span>
            <p>CHF {{this.price}}</p>
            <c-delete-cart-button class="secondary-content" product-id="{{this.id}}"></c-delete-cart-button>
        </li>
        {{else}}
        <h3>No Results</h3>
        <img src="https://www.thetimes.co.uk/imageserver/image/%2Fmethode%2Ftimes%2Fprod%2Fweb%2Fbin%2F05f43d38-e7c1-11e5-b34f-8cb8b003b8aa.jpg?crop=1429%2C804%2C45%2C12&resize=400"
            alt="no-data" style="width: 400px;">
        {{/each}}
    </ul>

</div>

{{> footer }}